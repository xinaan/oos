<div class="col-md-10">
<h2 class="page-header">Customers <%= link_to 'New Employee', new_customer_path, class:"btn btn-success pull-right" %></h2>
<table id="example" class="table table-striped table-bordered table-hover dataTable no-footer" >
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Username</th>
                <th>DOB</th>
                <th>Email</th>
				<th>Code</th>
				<th>Verified</th>
				<th>Actions</th>
            </tr>
        </thead>
 
        <tbody>
		<% @customers.each do |customer| %>
            <tr>
                <td><%= customer.first_name %></td>
                <td><%= customer.last_name %></td>
                <td><%= customer.user.username %></td>
                <td><%= customer.dob %></td>
                <td><%= customer.user.email %></td>
				<td><%= customer.user.activation_code %></td>
				<td><%= customer.user.is_verified %></td>
				<td class="text-center"><a href="<%= edit_customer_path(customer) %>"> <i class="fa fa-pencil fa-lg"></i></a>
					<a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="<%= customer_path(customer)%>"><i class="fa fa fa-trash-o fa-lg text-danger"></i></a>
				</td>
            </tr>
		<% end %>
		</tbody>
</table>
</div>




	<script>
$(document).ready(function() {
    $('#example').dataTable();
} );
</script>
