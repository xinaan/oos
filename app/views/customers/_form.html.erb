<%= form_for @customer, :html => { class:"form-horizontal"} do |f| %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Your Details</h3>
  </div>
  <div class="panel-body">
    <div class="form-group <%= "has-error" if @customer.errors[:first_name].any? %> ">
		<%= f.label 'Fisrt Name', class:"col-sm-2 control-label"%>
		<div class="col-sm-10">
			  <%= f.text_field :first_name, placeholder:"Fisrt Name",maxlength:20, class:"form-control" %>
			  <% if @customer.errors[:first_name].any? %>
				  <span class="help-block">
				  <% @customer.errors.full_messages_for(:first_name).each do |msg| %> 
					<%= msg %><br>
				  <% end %>
				  </span>
			  <% end %>
		</div>
	</div>
	
	<div class="form-group <%= "has-error" if @customer.errors[:last_name].any? %> ">
		<%= f.label 'Last Name', class:"col-sm-2 control-label"%>
		<div class="col-sm-10">
			  <%= f.text_field :last_name, placeholder:"Last Name",maxlength:20, class:"form-control" %>
			  <% if @customer.errors[:last_name].any? %>
				  <span class="help-block">
				  <% @customer.errors.full_messages_for(:last_name).each do |msg| %> 
					<%= msg %><br>
				  <% end %>
				  </span>
			  <% end %>
		</div>
	</div>
	
	<div class="form-group <%= "has-error" if @customer.errors[:gender].any? %> ">
		<%= f.label 'Gender', class:"col-sm-2 control-label"%>
		<div class="col-sm-10">
              <%= f.select :gender, [['Male', true], ['Female', false]], {prompt:"Select a Gender"}, class:"form-control"%>
			  <% if @customer.errors[:gender].any? %>
				  <span class="help-block">
				  <% @customer.errors.full_messages_for(:gender).each do |msg| %> 
					<%= msg %><br>
				  <% end %>
				  </span>
			  <% end %>
		</div>
	</div>
	
	<div class="form-group <%= "has-error" if @customer.errors[:dob].any? %> ">
		<%= f.label 'Date of Birth', class:"col-sm-2 control-label"%>
		<div class="col-sm-10">
			  <%= f.date_field :dob, class:"form-control" %>
			  <% if @customer.errors[:dob].any? %>
				  <span class="help-block">
				  <% @customer.errors.full_messages_for(:dob).each do |msg| %> 
					<%= msg %><br>
				  <% end %>
				  </span>
			  <% end %>
		</div>
	</div>
	
	<div class="form-group <%= "has-error" if @customer.errors[:contact].any? %> ">
		<%= f.label 'Contact Number', class:"col-sm-2 control-label"%>
		<div class="col-sm-10">
			  <%= f.text_field :contact, placeholder:"Phone Number",maxlength:7, class:"form-control" %>
			  <% if @customer.errors[:contact].any? %>
				  <span class="help-block">
				  <% @customer.errors.full_messages_for(:contact).each do |msg| %> 
					<%= msg %><br>
				  <% end %>
				  </span>
			  <% end %>
		</div>
	</div>
	
<hr>

	<%= f.fields_for :user do |builder| %>
		<div class="form-group <%= "has-error" if @customer.user.errors[:username].any? %> ">
			<%= builder.label 'Username', class:"col-sm-2 control-label"%>
			<div class="col-sm-10">
				  <%= builder.text_field :username, placeholder:"Username",maxlength:20, class:"form-control" %>
				  <% if @customer.user.errors[:username].any? %>
					  <span class="help-block">
					  <% @customer.user.errors.full_messages_for(:username).each do |msg| %> 
						<%= msg %><br>
					  <% end %>
					  </span>
				  <% end %>
			</div>
		</div>
		
		<div class="form-group <%= "has-error" if @customer.user.errors[:email].any? %> ">
			<%= builder.label 'Email', class:"col-sm-2 control-label"%>
			<div class="col-sm-10">
				  <%= builder.email_field :email, placeholder:"Email",maxlength:100, class:"form-control" %>
				  <% if @customer.user.errors[:email].any? %>
					  <span class="help-block">
					  <% @customer.user.errors.full_messages_for(:email).each do |msg| %> 
						<%= msg %><br>
					  <% end %>
					  </span>
				  <% end %>
			</div>
		</div>

		<div class="form-group <%= "has-error" if @customer.user.errors[:password].any? %> ">
			<%= builder.label 'Password', class:"col-sm-2 control-label"%>
			<div class="col-sm-10">
				  <%= builder.password_field :password, placeholder:"Password",maxlength:25, class:"form-control" %>
				  <% if @customer.user.errors[:password].any? %>
					  <span class="help-block">
					  <% @customer.user.errors.full_messages_for(:password).each do |msg| %> 
						<%= msg %><br>
					  <% end %>
					  </span>
				  <% end %>
			</div>
		</div>	
		
		<div class="form-group <%= "has-error" if @customer.user.errors[:password_confirmation].any? %> ">
			<%= builder.label 'Confirm Password', class:"col-sm-2 control-label"%>
			<div class="col-sm-10">
				  <%= builder.password_field :password_confirmation, placeholder:"Password",maxlength:25, class:"form-control" %>
				  <% if @customer.user.errors[:password_confirmation].any? %>
					  <span class="help-block">
					  <% @customer.user.errors.full_messages_for(:password_confirmation).each do |msg| %> 
						<%= msg %><br>
					  <% end %>
					  </span>
				  <% end %>
			</div>
		</div>	
	<% end %>
	
 </div>
 <div class="panel-footer">
	  <div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<div class="btn-group">
						<%= f.submit "Register", class:"btn btn-success" %>
						<% end %> 
						
				</div>
			
			</div>
	  </div>
  </div>
</div> 
  