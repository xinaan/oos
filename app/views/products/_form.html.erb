<%= form_for @product, :html => { class:"form-horizontal"} do |f| %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Product Details</h3>
  </div>
  <div class="panel-body">
    <div class="form-group <%= "has-error" if @product.errors[:name].any? %> ">
		<%= f.label 'Name', class:"col-sm-2 control-label"%>
		<div class="col-sm-10">
			  <%= f.text_field :name, placeholder:"Name",maxlength:50, class:"form-control" %>
			  <% if @product.errors[:name].any? %>
				  <span class="help-block">
				  <% @product.errors.full_messages_for(:name).each do |msg| %> 
					<%= msg %><br>
				  <% end %>
				  </span>
			  <% end %>
		</div>
	</div>
	
	<div class="form-group <%= "has-error" if @product.errors[:description].any? %> ">
		<%= f.label 'Description', class:"col-sm-2 control-label"%>
		<div class="col-sm-10">
			  <%= f.text_area :description, size: "24x6", class:"form-control" %>
			  <% if @product.errors[:description].any? %>
				  <span class="help-block">
				  <% @product.errors.full_messages_for(:description).each do |msg| %> 
					<%= msg %><br>
				  <% end %>
				  </span>
			  <% end %>
		</div>
	</div>
	
	<div class="form-group <%= "has-error" if @product.errors[:category_id].any? %> ">
		<%= f.label 'Category', class:"col-sm-2 control-label"%>
		<div class="col-sm-10">
			  <%= f.select :category_id, Category.all.collect {|u| [u.name, u.id]}, {prompt:"Select a Category"}, class:"form-control"%>
			  <% if @product.errors[:category_id].any? %>
				  <span class="help-block">
				  <% @product.errors.full_messages_for(:category_id).each do |msg| %> 
					<%= msg %><br>
				  <% end %>
				  </span>
			  <% end %>
		</div>
	</div>
	
	<div class="form-group <%= "has-error" if @product.errors[:size].any? %> ">
		<%= f.label 'Size', class:"col-sm-2 control-label"%>
		<div class="col-sm-10">
			  <%= f.text_field :size, placeholder:"",maxlength:15, class:"form-control" %>
			  <% if @product.errors[:size].any? %>
				  <span class="help-block">
				  <% @product.errors.full_messages_for(:size).each do |msg| %> 
					<%= msg %><br>
				  <% end %>
				  </span>
			  <% end %>
		</div>
	</div>
	
	
	
	<div class="form-group <%= "has-error" if @product.errors[:price].any? %> ">
		<%= f.label 'Price', class:"col-sm-2 control-label"%>
		<div class="col-sm-10">
			  <%= f.text_field :price, placeholder:"",maxlength:9, class:"form-control" %>
			  <% if @product.errors[:price].any? %>
				  <span class="help-block">
				  <% @product.errors.full_messages_for(:price).each do |msg| %> 
					<%= msg %><br>
				  <% end %>
				  </span>
			  <% end %>
		</div>
	</div>
	
	<div class="form-group <%= "has-error" if @product.errors[:visible].any? %> ">
		<%= f.label 'Visible', class:"col-sm-2 control-label"%>
		<div class="col-sm-10">
			  <%= f.select :visible, [['Visible', true], ['Invisible', false]], {prompt:"Select a Option"}, class:"form-control"%>
			  <% if @product.errors[:visible].any? %>
				  <span class="help-block">
					  <% @product.errors.full_messages_for(:visible).each do |msg| %> 
							<%= msg %><br>
					  <% end %>
				  </span>
			  <% end %>
		</div>
	</div>
	
	<div class="form-group <%= "has-error" if @product.errors[:image].any? %> ">
		<%= f.label 'Image', class:"col-sm-2 control-label"%>
		<div class="col-sm-10">
			  <%= f.file_field  :image, class:"form-control" %>
			  <% if @product.errors[:image].any? %>
				  <span class="help-block">
				  <% @product.errors.full_messages_for(:image).each do |msg| %> 
					<%= msg %><br>
				  <% end %>
				  </span>
			  <% end %>
		</div>
	</div>
 </div>
 <div class="panel-footer">
	  <div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<div class="btn-group">
						<%= f.submit class:"btn btn-success" %>
						<% end %> 
						
				</div>
			
			</div>
	  </div>
  </div>
</div> 
  
