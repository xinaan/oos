<%= form_for @user, :html => { class:"form-horizontal"} do |f| %>
  <div class="form-group <%= "has-error" if @user.errors[:username].count > 0 %> ">
	<%= f.label :username, class:"col-sm-2 control-label"%>
    <div class="col-sm-10">
	  <%= f.text_field :username,placeholder:"Username", class:"form-control" %>
	  <% if @user.errors[:username].count > 0 %>
		  <span class="help-block">
		  <% @user.errors.full_messages_for(:username).each do |msg| %> 
			<%= msg %>
		  <% end %>
		  </span>
	  <% end %>
    </div>
  </div>
  <div class="form-group <%= "has-error" if @user.errors[:password].count > 0 %>">
    <%= f.label :password, class:"col-sm-2 control-label"%>
    <div class="col-sm-10">
	  <%= f.password_field :password, placeholder:"Password", class:"form-control" %>
	  <% if @user.errors[:password].count > 0 %>
		  <span class="help-block">
		  <% @user.errors.full_messages_for(:password).each do |msg| %> 
			<%= msg %>
		  <% end %>
		  </span>
	  <% end %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
	  <%= f.submit class:"btn btn-default" %>
    </div>
  </div>
<% end %>
