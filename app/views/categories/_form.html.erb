<%= form_for @category, :html => { class:"form-horizontal"} do |f| %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Category Details</h3>
  </div>
  <div class="panel-body">
    <div class="form-group <%= "has-error" if @category.errors[:name].any? %> ">
		<%= f.label 'Name', class:"col-sm-2 control-label"%>
		<div class="col-sm-10">
			  <%= f.text_field :name, placeholder:"Name",maxlength:25, class:"form-control" %>
			  <% if @category.errors[:name].any? %>
				  <span class="help-block">
				  <% @category.errors.full_messages_for(:name).each do |msg| %> 
					<%= msg %><br>
				  <% end %>
				  </span>
			  <% end %>
		</div>
	</div>

	<div class="form-group <%= "has-error" if @category.errors[:category_id].any? %> ">
		<%= f.label 'Category', class:"col-sm-2 control-label"%>
		<div class="col-sm-10">
			  <%= f.select :category_id, Category.main.collect {|u| [u.name, u.id]}, {prompt:"Main Category"}, class:"form-control"%>
			  <% if @category.errors[:category_id].any? %>
				  <span class="help-block">
				  <% @category.errors.full_messages_for(:category_id).each do |msg| %> 
					<%= msg %><br>
				  <% end %>
				  </span>
			  <% end %>
		</div>
	</div>
 </div>
 <div class="panel-footer">
	  <div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<div class="btn-group">
						<%= f.submit class:"btn btn-success" %>
						<% end %> 
						
				</div>
			
			</div>
	  </div>
  </div>
</div> 
  