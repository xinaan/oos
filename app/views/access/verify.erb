<% @page_title = "Verify Account" %>

<div class="login-panel panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Please Enter Your Activation Code</h3>
  </div>
  <div class="panel-body">
    <%= form_tag({controller: "access", action:"attempt_verify"}) do %>
        <div class="form-group">
          <%= text_field_tag :code, nil, placeholder:"Code",class:"form-control" %>
        </div>
        <div class="form-group">
          <%= submit_tag("Verify",class:"btn btn-lg btn-success btn-block" )%>
        </div>
    <% end %>
  </div>
</div>